# Nyx Wallet Configuration
# Copy this file to .env and fill in your values

# API Keys for basic functionality
PIMLICO_API_KEY=your_pimlico_api_key_here
PRC_URL=https://prc-dev.pimlico.com/

# API Keys for transaction safety checks
ETHERSCAN_API_KEY=your_etherscan_api_key
TENDERLY_ACCESS_KEY=your_tenderly_access_key
TENDERLY_USER=your_tenderly_username
TENDERLY_PROJECT=your_tenderly_project
CLAUDE_API_KEY=your_claude_api_key

# Chain Selection
# Options: sepolia, base, baseGoerli, baseSepolia
ACTIVE_CHAIN=sepolia

# Ethereum Network Configuration
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Base Network Configuration
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY
BASE_GOERLI_RPC_URL=https://base-goerli.g.alchemy.com/v2/YOUR_API_KEY
BASE_SEPOLIA_RPC_URL=https://base-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Wallet Configuration
PRIVATE_KEY=your_private_key_here

# Pimlico Configuration (for sponsored transactions)
PIMLICO_API_KEY=your_pimlico_api_key_here

# Server Configuration
PORT=3000
SESSION_SECRET=your_session_secret_here

# Security Configuration
# This key is used to encrypt the server key before storing it in the database
# Generate a secure random key using: openssl rand -hex 32
KEY_ENCRYPTION_KEY=your_key_encryption_key_here 